<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lm.com.extendedlistview.MainActivity">

    <lm.com.extendedlistview.ExtendedListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        app:scrollBarPanel="@layout/scrollbarpanel"
        app:scrollBarPanelInAnimation="@anim/in"
        app:scrollBarPanelOutAnimation="@anim/out" />

</LinearLayout>
